---
// Modern, professional footer with enhanced layout and accessibility
// Features structured information sections and proper semantic markup
const sitemapLinks = [
  { name: "Homepage", href: "/" },
  { name: "Programme", href: "/programme" },
  { name: "Call for Abstracts", href: "/abstracts" },
  { name: "Registration", href: "/registration" }
];

const venueInfo = {
  name: "Singapore University of Social Sciences",
  address: "463 Clementi Road, Singapore 599494",
  links: [
    { name: "Campus Map", href: "#" },
    { name: "Locate SUSS", href: "#" },
    { name: "About SUSS", href: "#" }
  ]
};

const singaporeLinks = [
  { name: "Think you know Singapore?", href: "#" },
  { name: "Explore Singapore", href: "#" },
  { name: "Visit Singapore", href: "#" }
];
---

<footer class="bg-neutral-800 text-white" role="contentinfo">
  <!-- Main footer content -->
  <div class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      
      <!-- Conference Info -->
      <div class="lg:col-span-1">
        <div class="mb-6">
          <h3 class="text-xl font-bold text-white mb-2">ICPR7 2026</h3>
          <p class="text-neutral-300 text-sm">
            7th International Conference on Practice Research
          </p>
        </div>
        <div class="mb-4">
          <p class="text-neutral-300 text-sm font-medium mb-1">
            July 7-9, 2026
          </p>
          <p class="text-neutral-400 text-sm">
            Singapore University of Social Sciences
          </p>
        </div>
      </div>

      <!-- Venue Information -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Venue
        </h3>
        <div class="mb-4">
          <p class="text-neutral-300 font-medium text-sm mb-1">{venueInfo.name}</p>
          <address class="text-neutral-400 text-sm not-italic leading-relaxed">
            {venueInfo.address}
          </address>
        </div>
        <nav aria-label="Venue links">
          <ul class="space-y-2">
            {venueInfo.links.map(link => (
              <li>
                <a 
                  href={link.href} 
                  class="text-primary-300 hover:text-primary-200 text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-neutral-800 rounded px-1"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- About Singapore -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          About Singapore
        </h3>
        <nav aria-label="Singapore information">
          <ul class="space-y-2">
            {singaporeLinks.map(link => (
              <li>
                <a 
                  href={link.href} 
                  class="text-primary-300 hover:text-primary-200 text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-neutral-800 rounded px-1"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- Site Navigation -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
          Site Navigation
        </h3>
        <nav aria-label="Footer sitemap">
          <ul class="space-y-2">
            {sitemapLinks.map(link => (
              <li>
                <a 
                  href={link.href} 
                  class="text-primary-300 hover:text-primary-200 text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-neutral-800 rounded px-1"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- Footer bottom section -->
  <div class="border-t border-neutral-700">
    <div class="container mx-auto px-6 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        
        <!-- Copyright and conference info -->
        <div class="text-center md:text-left">
          <p class="text-neutral-400 text-sm">
            Â© 2026 ICPR7 - 7th International Conference on Practice Research
          </p>
          <p class="text-neutral-500 text-xs mt-1">
            Practice Research Without Borders: Inclusion and Change
          </p>
        </div>

        <!-- Back to top link -->
        <div>
          <a 
            href="#" 
            class="inline-flex items-center text-primary-300 hover:text-primary-200 text-sm font-medium transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-neutral-800 rounded-md px-3 py-2"
            onclick="window.scrollTo({top: 0, behavior: 'smooth'}); return false;"
            aria-label="Back to top of page"
          >
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
            </svg>
            Back to Top
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>