---
// Clean, minimal speaker card component with professional styling
// Emphasizes readability and accessibility for academic content
const { name, title, image } = Astro.props;
---

<div class="bg-white border border-neutral-200 rounded-xl p-6 shadow-sm hover:shadow-md transition-all duration-200 hover:border-neutral-300">
  <!-- Speaker image with fallback -->
  <div class="mb-4 flex justify-center">
    <div class="relative">
      {image ? (
        <img 
          src={image} 
          alt={`Portrait of ${name}`}
          class="w-24 h-24 rounded-full object-cover border-3 border-neutral-200 shadow-sm"
          loading="lazy"
        />
      ) : (
        <div class="w-24 h-24 rounded-full bg-neutral-100 border-3 border-neutral-200 flex items-center justify-center">
          <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
      )}
    </div>
  </div>
  
  <!-- Speaker Name -->
  <h4 class="text-lg font-semibold text-neutral-800 mb-2 leading-tight">
    {name}
  </h4>
  
  <!-- Speaker Title/Affiliation -->
  <p class="text-neutral-600 text-sm leading-relaxed">
    {title}
  </p>
  
  <!-- Visual separator line for enhanced structure -->
  <div class="mt-4 pt-4 border-t border-neutral-100">
    <div class="flex items-center justify-center">
      <div class="w-8 h-1 bg-primary-200 rounded-full"></div>
    </div>
  </div>
</div>