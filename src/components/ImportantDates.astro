---
// Portfolio Demo: Structured important dates component
// Generic version for portfolio showcase with fictional dates
const dates = [
  { 
    title: "Abstract Submission", 
    date: "15 March 2026 to 15 June 2026", 
    link: "#", 
    linkText: "Submit Here",
    icon: "document"
  },
  { 
    title: "Confirmation of Abstract Acceptance", 
    date: "1 July 2026", 
    link: null, 
    linkText: null,
    icon: "check"
  },
  { 
    title: "Registration", 
    date: "1 April 2026 to 1 August 2026", 
    link: "#", 
    linkText: "Register Now",
    icon: "user"
  }
];
---

<section class="mb-16" aria-labelledby="important-dates-heading">
  <div class="text-center mb-10">
    <h2 id="important-dates-heading" class="text-3xl font-bold text-neutral-800 mb-4">
      Important Dates
    </h2>
    <div class="w-20 h-1 bg-primary-500 mx-auto rounded-full"></div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
    {dates.map((item, index) => (
      <div class="bg-white border border-neutral-200 rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300 hover:border-primary-200 hover:-translate-y-1 group">
        <!-- Icon Section -->
        <div class="mb-6 flex justify-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center group-hover:bg-primary-200 transition-colors duration-300">
            {item.icon === 'document' && (
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            )}
            {item.icon === 'check' && (
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            )}
            {item.icon === 'user' && (
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            )}
          </div>
        </div>
        
        <!-- Content Section -->
        <div class="text-center">
          <h3 class="text-xl font-semibold text-neutral-800 mb-4 leading-tight">
            {item.title}
          </h3>
          
          <div class="mb-6">
            <time class="text-neutral-600 font-medium block leading-relaxed">
              {item.date}
            </time>
          </div>
          
          {item.link && (
            <a 
              href={item.link} 
              class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 rounded-md px-2 py-1"
              aria-label={`${item.linkText} for ${item.title}`}
            >
              {item.linkText}
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          )}
        </div>
        
        <!-- Progress indicator for visual enhancement -->
        <div class="mt-6 pt-4 border-t border-neutral-100">
          <div class="flex justify-center">
            <div class="w-12 h-1 bg-primary-200 rounded-full">
              <div class={`h-full bg-primary-500 rounded-full transition-all duration-500 ${index === 0 ? 'w-1/3' : index === 1 ? 'w-2/3' : 'w-full'}`}></div>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>