---
// Conference Team page with professional academic design
// Features organizing committee, advisory board, and key personnel
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>Conference Team - GRS2026 | Global Research Summit Portfolio Demo</title>
  <meta name="description" content="Meet the dedicated team organizing GRS2026, including the organizing committee, advisory board, and key personnel. Portfolio demo version.">
  <meta name="keywords" content="GRS2026 organizing committee, conference team, research experts, portfolio demo">
  
  <!-- Favicon -->
  <link rel="icon" href="/favicon.svg">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="bg-neutral-25 font-sans antialiased">
  <Nav />

  <main class="min-h-screen">
    <!-- Page Header -->
    <section class="bg-gradient-to-b from-primary-50 to-white py-16 lg:py-20" aria-labelledby="team-heading">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center bg-primary-100 text-primary-800 px-4 py-2 rounded-full text-sm font-medium mb-6">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
            Conference Team
          </div>
          
          <h1 id="team-heading" class="text-4xl md:text-5xl font-bold text-neutral-800 mb-6">
            Meet the GRS2026 Team
          </h1>
          
          <p class="text-xl text-neutral-600 leading-relaxed max-w-3xl mx-auto">
            A dedicated group of researchers, practitioners, and organizers working together to create 
            an exceptional conference experience that advances global research initiatives.
          </p>
        </div>
      </div>
    </section>

    <!-- Conference Chair -->
    <section class="py-16 lg:py-20 bg-white" aria-labelledby="chair-heading">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 id="chair-heading" class="text-3xl md:text-4xl font-bold text-neutral-800 mb-4">
              Conference Chair
            </h2>
            <div class="w-20 h-1 bg-primary-500 mx-auto rounded-full"></div>
          </div>
          
          <div class="bg-gradient-to-r from-primary-50 to-primary-25 rounded-2xl p-8 lg:p-12">
            <div class="flex flex-col lg:flex-row items-center lg:items-start text-center lg:text-left">
              <div class="mb-6 lg:mb-0 lg:mr-8">
                <img 
                  src="/images/timothy-sim.svg" 
                  alt="Portrait of Associate Professor Timothy Sim" 
                  class="w-32 h-32 rounded-full object-cover border-4 border-white shadow-lg mx-auto lg:mx-0"
                />
              </div>
              
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-neutral-800 mb-2">
                  Professor Sarah Mitchell
                </h3>
                <p class="text-primary-700 font-semibold mb-4">Conference Chair</p>
                <p class="text-neutral-600 mb-4">
                  Global University of Research Sciences
                </p>
                
                <p class="text-neutral-700 leading-relaxed mb-6">
                  Professor Sarah Mitchell brings over 15 years of experience in interdisciplinary research 
                  and innovation studies. Her research focuses on collaborative approaches to research 
                  development and the integration of evidence-based practices across various fields. She has 
                  led numerous international research initiatives and global collaboration projects.
                </p>
                
                <div class="flex flex-wrap gap-2 justify-center lg:justify-start">
                  <span class="bg-white text-primary-700 px-3 py-1 rounded-full text-sm font-medium">Research Innovation</span>
                  <span class="bg-white text-primary-700 px-3 py-1 rounded-full text-sm font-medium">Global Collaboration</span>
                  <span class="bg-white text-primary-700 px-3 py-1 rounded-full text-sm font-medium">Knowledge Translation</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Organizing Committee -->
    <section class="py-16 lg:py-20 bg-neutral-50" aria-labelledby="organizing-heading">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 id="organizing-heading" class="text-3xl md:text-4xl font-bold text-neutral-800 mb-4">
              Organizing Committee
            </h2>
            <div class="w-20 h-1 bg-primary-500 mx-auto rounded-full mb-6"></div>
            <p class="text-neutral-600 text-lg max-w-3xl mx-auto">
              The organizing committee comprises experienced researchers and practitioners 
              committed to delivering an outstanding conference experience.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Committee Member 1 -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-neutral-200 text-center hover:shadow-md transition-all duration-200">
              <div class="mb-4">
                <div class="w-24 h-24 bg-neutral-100 rounded-full border-3 border-neutral-200 flex items-center justify-center mx-auto">
                  <svg class="w-10 h-10 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              </div>
              
              <h3 class="text-lg font-semibold text-neutral-800 mb-2">Dr. Michael Johnson</h3>
              <p class="text-primary-600 font-medium text-sm mb-3">Programme Committee Chair</p>
              <p class="text-neutral-600 text-sm mb-4">Metropolitan Research University</p>
              
              <div class="pt-4 border-t border-neutral-100">
                <p class="text-xs text-neutral-500 mb-2">Expertise:</p>
                <div class="flex flex-wrap gap-1 justify-center">
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Research Methods</span>
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Program Evaluation</span>
                </div>
              </div>
            </div>

            <!-- Committee Member 2 -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-neutral-200 text-center hover:shadow-md transition-all duration-200">
              <div class="mb-4">
                <div class="w-24 h-24 bg-neutral-100 rounded-full border-3 border-neutral-200 flex items-center justify-center mx-auto">
                  <svg class="w-10 h-10 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              </div>
              
              <h3 class="text-lg font-semibold text-neutral-800 mb-2">Mr. Alex Thompson</h3>
              <p class="text-primary-600 font-medium text-sm mb-3">Local Arrangements Chair</p>
              <p class="text-neutral-600 text-sm mb-4">Capital City Research Institute</p>
              
              <div class="pt-4 border-t border-neutral-100">
                <p class="text-xs text-neutral-500 mb-2">Expertise:</p>
                <div class="flex flex-wrap gap-1 justify-center">
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Event Management</span>
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Logistics</span>
                </div>
              </div>
            </div>

            <!-- Committee Member 3 -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-neutral-200 text-center hover:shadow-md transition-all duration-200">
              <div class="mb-4">
                <div class="w-24 h-24 bg-neutral-100 rounded-full border-3 border-neutral-200 flex items-center justify-center mx-auto">
                  <svg class="w-10 h-10 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              </div>
              
              <h3 class="text-lg font-semibold text-neutral-800 mb-2">Dr. Elena Rodriguez</h3>
              <p class="text-primary-600 font-medium text-sm mb-3">International Relations Chair</p>
              <p class="text-neutral-600 text-sm mb-4">International Technology University</p>
              
              <div class="pt-4 border-t border-neutral-100">
                <p class="text-xs text-neutral-500 mb-2">Expertise:</p>
                <div class="flex flex-wrap gap-1 justify-center">
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Global Networks</span>
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Partnerships</span>
                </div>
              </div>
            </div>

            <!-- Committee Member 4 -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-neutral-200 text-center hover:shadow-md transition-all duration-200">
              <div class="mb-4">
                <div class="w-24 h-24 bg-neutral-100 rounded-full border-3 border-neutral-200 flex items-center justify-center mx-auto">
                  <svg class="w-10 h-10 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              </div>
              
              <h3 class="text-lg font-semibold text-neutral-800 mb-2">Ms. Rachel Williams</h3>
              <p class="text-primary-600 font-medium text-sm mb-3">Communications Chair</p>
              <p class="text-neutral-600 text-sm mb-4">Global Research Association</p>
              
              <div class="pt-4 border-t border-neutral-100">
                <p class="text-xs text-neutral-500 mb-2">Expertise:</p>
                <div class="flex flex-wrap gap-1 justify-center">
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Marketing</span>
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Public Relations</span>
                </div>
              </div>
            </div>

            <!-- Committee Member 5 -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-neutral-200 text-center hover:shadow-md transition-all duration-200">
              <div class="mb-4">
                <div class="w-24 h-24 bg-neutral-100 rounded-full border-3 border-neutral-200 flex items-center justify-center mx-auto">
                  <svg class="w-10 h-10 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              </div>
              
              <h3 class="text-lg font-semibold text-neutral-800 mb-2">Dr. David Kim</h3>
              <p class="text-primary-600 font-medium text-sm mb-3">Technology Chair</p>
              <p class="text-neutral-600 text-sm mb-4">Capital Innovation University</p>
              
              <div class="pt-4 border-t border-neutral-100">
                <p class="text-xs text-neutral-500 mb-2">Expertise:</p>
                <div class="flex flex-wrap gap-1 justify-center">
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Digital Platforms</span>
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">A/V Technology</span>
                </div>
              </div>
            </div>

            <!-- Committee Member 6 -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-neutral-200 text-center hover:shadow-md transition-all duration-200">
              <div class="mb-4">
                <div class="w-24 h-24 bg-neutral-100 rounded-full border-3 border-neutral-200 flex items-center justify-center mx-auto">
                  <svg class="w-10 h-10 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              </div>
              
              <h3 class="text-lg font-semibold text-neutral-800 mb-2">Ms. Jennifer Chen</h3>
              <p class="text-primary-600 font-medium text-sm mb-3">Student Coordinator</p>
              <p class="text-neutral-600 text-sm mb-4">Capital City Research Institute</p>
              
              <div class="pt-4 border-t border-neutral-100">
                <p class="text-xs text-neutral-500 mb-2">Expertise:</p>
                <div class="flex flex-wrap gap-1 justify-center">
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Student Engagement</span>
                  <span class="bg-neutral-100 text-neutral-700 px-2 py-1 rounded text-xs">Mentorship</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- International Advisory Board -->
    <section class="py-16 lg:py-20 bg-white" aria-labelledby="advisory-heading">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 id="advisory-heading" class="text-3xl md:text-4xl font-bold text-neutral-800 mb-4">
              International Advisory Board
            </h2>
            <div class="w-20 h-1 bg-primary-500 mx-auto rounded-full mb-6"></div>
            <p class="text-neutral-600 text-lg max-w-3xl mx-auto">
              Distinguished international experts providing strategic guidance and ensuring 
              the conference meets global standards of excellence.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-gradient-to-br from-accent-50 to-accent-25 rounded-2xl p-6">
              <h3 class="text-xl font-bold text-neutral-800 mb-6">Board Members</h3>
              
              <div class="space-y-4">
                <div class="flex items-center">
                  <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-neutral-800">Prof. Robert Anderson</p>
                    <p class="text-sm text-neutral-600">Board Member, International Research Alliance, USA</p>
                  </div>
                </div>
                
                <div class="flex items-center">
                  <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-neutral-800">Dr. Emma Larsson</p>
                    <p class="text-sm text-neutral-600">Board Member, International Research Alliance, Norway</p>
                  </div>
                </div>
                
                <div class="flex items-center">
                  <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-neutral-800">Prof. Marco Rossi</p>
                    <p class="text-sm text-neutral-600">Board Member, International Research Alliance, Italy</p>
                  </div>
                </div>
                
                <div class="flex items-center">
                  <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-neutral-800">Assoc. Prof. James Parker</p>
                    <p class="text-sm text-neutral-600">Board Member, International Research Alliance, UK</p>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="bg-gradient-to-br from-primary-50 to-primary-25 rounded-2xl p-6">
              <h3 class="text-xl font-bold text-neutral-800 mb-6">Advisory Role</h3>
              
              <div class="space-y-4">
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <p class="text-neutral-700">Strategic conference planning and theme development</p>
                </div>
                
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <p class="text-neutral-700">Quality assurance for academic program content</p>
                </div>
                
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <p class="text-neutral-700">International networking and partnership facilitation</p>
                </div>
                
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <p class="text-neutral-700">Abstract review and program evaluation</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact the Team -->
    <section class="py-16 bg-primary-600 text-white">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6">Get in Touch with the Team</h2>
          
          <p class="text-primary-100 text-lg mb-8 max-w-2xl mx-auto">
            Have questions about the conference? Want to collaborate or contribute? 
            Our team is here to help and welcomes your involvement.
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="text-center">
              <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-white mb-2">General Inquiries</h3>
              <p class="text-primary-100 text-sm">info@grs2026.demo</p>
            </div>
            
            <div class="text-center">
              <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-white mb-2">Partnership Opportunities</h3>
              <p class="text-primary-100 text-sm">partnerships@grs2026.demo</p>
            </div>
            
            <div class="text-center">
              <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-white mb-2">Media Inquiries</h3>
              <p class="text-primary-100 text-sm">media@grs2026.demo</p>
            </div>
          </div>
          
          <div class="pt-6 border-t border-primary-500">
            <p class="text-sm text-primary-200">
              Follow us on social media for the latest updates and behind-the-scenes content from the GRS2026 team
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</body>
</html>